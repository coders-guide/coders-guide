{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "sandbox", "./src/**/*.spec.ts"],
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "rootDirs": ["src", "sandbox"],
    "module": "esnext",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": "./src/"
  }
}
